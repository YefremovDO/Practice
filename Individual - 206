#include <iostream>
#include <fstream>
#include <string>
#include "windows.h"
using namespace std;

int main()
{
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);
    int num;
    int kilk = 0;
    cout << "Введіть число = ";
    cin >> num;

    while (num != 0)
    {
        num /= 10;
        kilk++;
    }
    cout << "Кількість цифр в числі = " << kilk << endl;

    return 0;
}
