#include <iostream>
#include <math.h>
#include <string>
#include "windows.h"
using namespace std;

int main()
{
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);
    int num = 0xF;
    int st = 0x5;

    cout << "Задача: " << endl;
    cout << "число " << num << " в степенi " << st << " дорівнює " << pow(num, st) << endl;
    cout << "\n в шістнадцятковій системі: " << endl;
    cout << " число " << hex << num << " в степенi " << hex << st << " дорівнює " << hex << pow(num, st) << endl;
    cout << endl;
    system("pause");
    return 0;
}
