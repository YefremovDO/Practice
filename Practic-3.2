#include <iostream>
#include <time.h>
#include <ctime>
using namespace std;

int main()
{
	const int N = 50;
	int array[N];
	srand(time(NULL));

	for (int i = 0; i < N;)
	{
		array[i] = 1 + rand() % 99;
		if (array[i] % 2)
		{
			cout << "N[" << i << "] = " << array[i] << endl;
			i++;
		}
	}
	return 0;
}
