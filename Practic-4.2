#include<iostream>
#include <time.h> 
using namespace std;

int main()
{
	setlocale(0, "Ukr");
	const int N = 10;
	int arr[N][N];
	int xsum[N];
	int ysum[N];

	for (int i = 0; i < N; i++)
	{
		for (int j = 0; j < N; j++)
		{
			arr[i][j] = rand() % 8 + 1;
		}
	}

	for (int i = 0; i < N; i++)
	{
		for (int j = 0; j < N; j++)
		{
			cout << arr[i][j] << " ";
		}
		cout << endl;
	}

	for (int i = 0; i < N; i++)
	{
		ysum[i] = 0;
	}

	for (int i = 0; i < N; i++)
	{
		xsum[i] = 0;
	}

	for (int i = 0; i < N; i++)
	{
		for (int j = 0; j < N; j++)
		{
			xsum[i] += arr[i][j];
			ysum[i] += arr[j][i];
		}
	}
	cout << "\nСума стовпцiв: " << endl;

	for (int i = 0; i < N; i++)
	{
		cout << ysum[i] << " ";
	}
	cout << endl;
	cout << "\nСума строк: " << endl;

	for (int i = 0; i < N; i++)
	{
		cout << xsum[i] << " ";
	}
	return 0;
}
