#include <iostream>
#include <ctime>
#include <cstdlib>
#include <algorithm>
using namespace std;

int main()
{
    const int n = 7;
    int a[n] = { 1,2,3,4,5,6,7 };
    int i;

    for (i=0; i<n; i++)
    {
        cout << a[i] << " ";
    }
    cout << endl;
    rotate(a, &a[n] - 2, &a[n]);

    for (auto n : a)
    {
        cout << n << " ";
    }
    cout << endl;
    system("pause");
    return 0;
}
